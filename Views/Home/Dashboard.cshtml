</div>
@section Scripts {
    <script>
        // === ГЛОБАЛЬНЫЕ ПЕРЕМЕННЫЕ ===
        let extractedItems = [];
        let excludedItems = new Set();
        const MAX_ITEMS = 900;
        const $dataList = $('#dataList');
        const $excludeList = $('#excludeList');
        const $extractedCount = $('#extractedCount');
        const $excludeCount = $('#excludeCount');
        const $textarea = $('#itemsTextarea');
        const $counter = $('#count');
        const $counterWrapper = $('#itemsCounter');
        $('input[name="File"]').on('change', function () {
            const file = this.files[0];
            if (file) {
                $('#uploadBtn').prop('disabled', false);
                const sizeKB = (file.size / 1024).toFixed(1);
                const sizeMB = (file.size / 1024 / 1024).toFixed(2);
                const humanSize = sizeMB >= 1 ? sizeMB + " MB" : sizeKB + " KB";
                $('#fileName').text(file.name);
                $('#fileSize').text(humanSize);
                $("#fileInfo").removeClass("d-none");
            } else {
                $('#uploadBtn').prop('disabled', true);
                $("#fileInfo").addClass("d-none");
                $('#fileName').text("");
                $('#fileSize').text("");
            }
        });

        function renderExtractedList() {
            $dataList.empty();
            extractedItems.forEach((item, index) => {
                const escaped = item.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
                const isExcluded = excludedItems.has(item);
                const row = $(`
                    <div class="d-flex align-items-center justify-content-between py-1 ${isExcluded ? 'text-muted opacity-50' : ''}">
                        <div class="d-flex align-items-center flex-grow-1 clickable-address" style="cursor: pointer;" data-address="${item.replace(/"/g, '&quot;')}" title="Копировать в поле ввода">
                            <i class="fas fa-angle-right me-2"></i>
                            <code class="text-break">${escaped}</code>
                        </div>
                        <div>
                            ${!isExcluded
                                ? `<button class="btn btn-sm btn-outline-danger exclude-btn" data-index="${index}" title="Исключить"><i class="fas fa-minus"></i></button>`
                                : `<button class="btn btn-sm btn-outline-success include-btn" data-index="${index}" title="Вернуть"><i class="fas fa-plus"></i></button>`
                            }
                        </div>
                    </div>
                `);
                $dataList.append(row);
            });
            $extractedCount.text(extractedItems.length);
            updateCopyButtonText();
        }

        // Обработчик клика по всему блоку адреса
        $(document).on('click', '.clickable-address', function() {
            const address = $(this).data('address');
            $('#manualExclude').val(address);
    
            showNotification('info', 'Скопировано', `Адрес "${address}" скопирован в поле ввода`);
            $('#manualExclude').focus();
    
            // Анимация выделения
            $(this).addClass('bg-light rounded px-2');
            setTimeout(() => {
                $(this).removeClass('bg-light rounded px-2');
            }, 1000);
        });

        // Восстанавливаем обработчик очистки всех локальных исключений
        $('#clearExcludesBtn').on('click', function() {
            if (excludedItems.size > 0) {
                if (confirm(`Очистить все локальные исключения (${excludedItems.size} элементов)?`)) {
                    excludedItems.clear();
                    renderExcludeList();
                    renderExtractedList();
                    showNotification('info', 'Очищено', 'Все локальные исключения удалены');
                }
            } else {
                showNotification('warning', 'Пусто', 'Нет локальных исключений для очистки');
            }
        });

        function renderExcludeList() {
            $excludeList.empty();
            excludedItems.forEach(item => {
                const escaped = item.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
                const li = $(`
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <code>${escaped}</code>
                        <button type="button" class="remove-exclude-btn" data-item="${item.replace(/"/g, '&quot;')}">
                            <i class="fas fa-times"></i>
                        </button>
                    </li>
                `);
                $excludeList.append(li);
            });
            $excludeCount.text(excludedItems.size);
            $('#clearExcludesBtn').toggle(excludedItems.size > 0);
        }

        function updateCopyButtonText() {
            const count = extractedItems.filter(i => !excludedItems.has(i)).length;
            $('#copyToGroupBtn').html(`
                    Скопировать в поле группы
                    <span class="badge bg-light text-dark ms-2">${count}</span>
                    ${count < extractedItems.length ? `<small class="text-muted ms-2">(исключено ${extractedItems.length - count})</small>` : ''}
                `);
        }
        // Восстанавливаем обработчики для кнопок в основном списке
        $(document).on('click', '.exclude-btn', function () {
            const index = $(this).data('index');
            const item = extractedItems[index];
            excludedItems.add(item);
            renderExtractedList();
            renderExcludeList();
            showNotification('success', 'Добавлено', `"${item}" добавлен в локальные исключения`);
        });
        $(document).on('click', '.include-btn', function () {
            const index = $(this).data('index');
            const item = extractedItems[index];
            excludedItems.delete(item);
            renderExtractedList();
            renderExcludeList();
            showNotification('info', 'Возвращено', `"${item}" возвращен в основной список`);
        });
        // Восстанавливаем обработчик удаления одного элемента
        $(document).on('click', '.remove-exclude-btn', function () {
            const item = $(this).data('item');
            excludedItems.delete(item);
            renderExtractedList();
            renderExcludeList();
            showNotification('info', 'Удалено', `"${item}" удален из локальных исключений`);
        });
        // Обновляем обработчик добавления исключений - БЕЗ локального добавления
        $('#addExcludeBtn').on('click', async () => {
            const val = $('#manualExclude').val().trim();
            if (val) {
                // Проверяем, нет ли уже такого исключения на клиенте
                if (excludedItems.has(val)) {
                    showNotification('warning', 'Уже в исключениях', 
                        `"${val}" уже есть в списке исключений`);
                    $('#manualExclude').val('').focus();
                    return;
                }
        
                // Проверяем валидность
                if (val.length < 2) {
                    showNotification('error', 'Ошибка', 
                        'Слишком короткое значение для исключения');
                    return;
                }
        
                try {
                    // Отправляем на сервер
                    const response = await fetch('/Home/AddExclude', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(val)
                    });
            
                    if (response.ok) {
                        const result = await response.json();
                        if (result.success) {
                            // НЕ добавляем локально - только уведомление
                            showNotification('success', 'Успешно добавлено', 
                                `"${val}" добавлен в глобальные исключения и сохранен в файл`);
                    
                            // Очищаем поле ввода
                            $('#manualExclude').val('').focus();
                        } else {
                            showNotification('error', 'Ошибка сервера', 
                                result.message || 'Не удалось сохранить исключение');
                        }
                    } else {
                        showNotification('error', 'Ошибка сервера', 
                            'Не удалось отправить исключение на сервер');
                    }
                } catch (error) {
                    console.error('Ошибка:', error);
                    showNotification('error', 'Ошибка сети', 
                        'Не удалось отправить исключение на сервер');
                }
            } else {
                showNotification('warning', 'Пустое поле', 
                    'Введите адрес для добавления в исключения');
            }
        });
        $('#manualExclude').on('keypress', e => {
            if (e.which === 13) $('#addExcludeBtn').click();
        });
        // === ЗАГРУЗКА ФАЙЛА ===
        function uploadFile() {
            const btn = $('#uploadBtn');
            btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Обработка...');
            const formData = new FormData($('#uploadForm')[0]);
            $.ajax({
                url: '/Home/UploadFile',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: response => {
                    $('#extractedData').hide();
                    extractedItems = [];
                    excludedItems.clear();
                    if (response.success) {
                        $('#results').html(`<div class="result-box success">
                            <i class="fas fa-check-circle"></i> Успешно! Найдено <strong>${response.count}</strong> элементов
                        </div>`);
                        if (response.data?.length > 0) {
                            extractedItems = response.data.map(s => s.trim()).filter(Boolean);
                            $('#extractedData').show();
                            renderExtractedList();
                            renderExcludeList();
                        }
                    } else {
                        $('#results').html(`<div class="result-box warning">
                            <i class="fas fa-exclamation-triangle"></i> ${response.message}
                        </div>`);

                        /* $('#results').html(`<div class="alert alert-warning">${response.message || 'Ошибка обработки'}</div>`); */
                    }
                },
                error: () => {
                    $('#results').html(`<div class="result-box error">
                        <i class="fas fa-times-circle"></i> Ошибка обработки файла
                    </div>`);

                    /* $('#results').html('<div class="alert alert-danger">Ошибка сервера</div>'); */
                },
                complete: () => {
                    btn.html('Загрузить и обработать')
                        .prop('disabled', !$('input[name="File"]')[0].files.length);
                }
            });
        }
        // === КОПИРОВАНИЕ С УЧЁТОМ ИСКЛЮЧЕНИЙ ===
        $('#copyToGroupBtn').on('click', () => {
            const itemsToCopy = extractedItems
                .filter(item => !excludedItems.has(item))
                .slice(0, MAX_ITEMS);
            $textarea.val(itemsToCopy.join('\n'));
            updateItemsCounter();
            updateCreateGroupButtonState();
            const btn = $('#copyToGroupBtn');
            btn.removeClass('btn-primary').addClass('btn-success').html('Скопировано!');
            setTimeout(() => {
                btn.removeClass('btn-success').addClass('btn-primary');
                updateCopyButtonText();
            }, 2000);
        });
        // === ВСЁ ОСТАЛЬНОЕ (без изменений) ===
        $('input[name="File"]').on('change', function () {
            $('#uploadBtn').prop('disabled', !this.files.length);
        });
        setInterval(() => {
            $.post('/Home/CheckAuth', {}, r => {
                if (!r.authenticated) {
                    alert('Сессия истекла. Перенаправление...');
                    location.href = '/Home/Index';
                }
            });
        }, 300000);
        // Функция для загрузки количества элементов в группе
        async function loadGroupItemCount(groupName, isUrlGroup) {
            try {
                const response = await fetch('/Home/GetGroupItemCount?groupName=' + encodeURIComponent(groupName) + '&isUrlGroup=' + isUrlGroup);
                if (response.ok) {
                    const count = await response.json();
                    $('#selectedGroupCount').text(count);
                    $('#groupItemCount').show();
                } else {
                    $('#groupItemCount').hide();
                }
            } catch (error) {
                console.error('Ошибка загрузки количества элементов:', error);
                $('#groupItemCount').hide();
            }
        }

        // Обнови функцию loadGroups
        function loadGroups(isUrl) {
            const url = isUrl ? '/Home/GetUrlGroups' : '/Home/GetIpGroups';
            const $select = $('#existingGroupSelect');
            $select.empty().append('<option value="">Загрузка...</option>');
    
            fetch(url)
                .then(r => r.json())
                .then(groups => {
                    $select.empty().append('<option value="">Выберите существующую группу...</option>');
                    if (Array.isArray(groups) && groups.length > 0) {
                        groups.forEach(g => $select.append(`<option value="${g}">${g}</option>`));
                    } else {
                        $select.append('<option value="" disabled>(пусто)</option>');
                    }
                    $('#groupItemCount').hide(); // Скрываем при загрузке новых групп
                })
                .catch(() => $select.html('<option value="">Ошибка загрузки</option>'))
                .finally(updateCreateGroupButtonState);
        }

        // Обработчик изменения выбора группы
        $(document).on('change', '#existingGroupSelect', function() {
            const selectedGroup = $(this).val();
            const isUrlGroup = $('select[name="IsUrlGroup"]').val() === 'true';
    
            if (selectedGroup) {
                loadGroupItemCount(selectedGroup, isUrlGroup);
            } else {
                $('#groupItemCount').hide();
            }
        });

        // Также обновляй при смене типа группы
        $(document).on('change', 'select[name="IsUrlGroup"]', function() {
            $('#groupItemCount').hide(); // Скрываем при смене типа группы
        });
        function updateItemsCounter() {
            const lines = $textarea.val().split('\n').map(s => s.trim()).filter(s => s);
            const count = lines.length;
            $counter.text(count);
            if (count >= MAX_ITEMS) {
                $counterWrapper.html(`<span class="text-danger fw-bold">${count}</span> / <span class="text-danger">900</span> (лимит)`);
            } else if (count >= 700) {
                $counterWrapper.html(`<span class="text-warning fw-bold">${count}</span> / 900`);
            } else {
                $counterWrapper.html(`<span class="text-success fw-bold">${count}</span> / 900`);
            }
            if (count > MAX_ITEMS) {
                $('#createGroupBtn').prop('disabled', true);
                if (!$('#itemsCounter').data('warn')) {
                    alert(`Максимум 900 элементов! У вас: ${count}`);
                    $('#itemsCounter').data('warn', true);
                }
            } else {
                $('#itemsCounter').data('warn', false);
                updateCreateGroupButtonState();
            }
        }
        function updateCreateGroupButtonState() {
            const count = $textarea.val().trim().split('\n').filter(s => s.trim()).length;
            const hasItems = count > 0 && count <= MAX_ITEMS;
            const existing = $('#existingGroupSelect').val();
            const createNew = $('#createNewGroupCheck').is(':checked') && $('#newGroupName').val().trim();
            $('#createGroupBtn').prop('disabled', !(hasItems && (existing || createNew)));
        }
        function createGroup() {
            const btn = $('#createGroupBtn');

            if (btn.prop('disabled') || btn.data('submitting')) return;

            btn.data('submitting', true)
                .html('<span class="spinner-border spinner-border-sm me-2"></span>Обработка...');

            const itemsText = $('textarea[name="Items"]').val().trim();
            const items = itemsText.split('\n')
                .map(s => s.trim())
                .filter(s => s.length > 0);

            if (items.length === 0) {
                $('#groupResults')
                    .removeClass('d-none success error warning')
                    .addClass('result-box warning')
                    .html('<i class="fas fa-exclamation-triangle me-2"></i>Введите хотя бы один элемент!');
                btn.data('submitting', false)
                    .html('<i class="fas fa-plus-circle me-2"></i>Создать / обновить группу');
                return;
            }

            if (items.length > 900) {
                $('#groupResults')
                    .removeClass('d-none success warning')
                    .addClass('result-box error')
                    .html(`<i class="fas fa-times-circle me-2"></i>Превышен максимальный лимит в 900 элементов. Сейчас: <strong>${items.length}</strong>. Удалите лишние строки.`);
                btn.data('submitting', false)
                    .html('<i class="fas fa-plus-circle me-2"></i>Создать / обновить группу');
                return;
            }

            let groupName;
            const createNew = $('#createNewGroupCheck').is(':checked');

            if (createNew) {
                groupName = $('#newGroupName').val().trim();
                if (!groupName) {
                    $('#groupResults')
                        .removeClass('d-none success warning')
                        .addClass('result-box error')
                        .html('<i class="fas fa-times-circle me-2"></i>Введите название новой группы!');
                    btn.data('submitting', false)
                        .html('<i class="fas fa-plus-circle me-2"></i>Создать / обновить группу');
                    return;
                }
            } else {
                groupName = $('#existingGroupSelect').val();
                if (!groupName) {
                    $('#groupResults')
                        .removeClass('d-none success warning')
                        .addClass('result-box error')
                        .html('<i class="fas fa-times-circle me-2"></i>Выберите существующую группу или включите «Создать новую группу».');
                    btn.data('submitting', false)
                        .html('<i class="fas fa-plus-circle me-2"></i>Создать / обновить группу');
                    return;
                }
            }

            const data = {
                GroupName: groupName,
                Description: $('input[name="Description"]').val().trim(),
                IsUrlGroup: $('select[name="IsUrlGroup"]').val() === 'true',
                Items: items
            };

            // Индикатор выполнения справа
            $('#groupResults')
                .removeClass('d-none success error warning')
                .addClass('result-box loading')
                .html(`
                    <i class="fas fa-cog fa-spin me-2"></i>
                    <span>Создание / обновление группы...</span>
                `);

            $.ajax({
                url: '/Home/CreateGroup',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: resp => {
                    const ok = resp.success;
                    $('#groupResults')
                        .removeClass('d-none success error warning loading')
                        .addClass(`result-box ${ok ? 'success' : 'error'}`)
                        .html(`
                            <i class="fas fa-${ok ? 'check-circle' : 'times-circle'} me-2"></i>
                            <span>${resp.message}</span>
                        `);

                    if (ok) {
                        // 1. Сбрасываем форму
                        $('#groupForm')[0].reset();
                        $('#createNewGroupCheck').prop('checked', false);
                        $('#newGroupNameWrapper').hide();
                        $('#existingGroupSelect').prop('disabled', false);

                        // 2. Восстанавливаем селектор типа группы
                        $('select[name="IsUrlGroup"]').val(data.IsUrlGroup ? 'true' : 'false');

                        // 3. Обновляем надпись "Сейчас выбрано" (если есть такой элемент)
                        $('#currentGroupType').text(data.IsUrlGroup ? 'URL-группы' : 'IP-группы');

                        // 4. Перезагружаем список групп
                        loadGroups(data.IsUrlGroup);

                        // 5. Чистим textarea
                        $('textarea[name="Items"]').val('');
                        updateCreateGroupButtonState();
                    }
                },
                error: () => {
                    $('#groupResults')
                        .removeClass('d-none success warning')
                        .addClass('result-box error')
                        .html('<i class="fas fa-times-circle me-2"></i>Ошибка сервера при создании / обновлении группы.');
                },
                complete: () => {
                    btn.data('submitting', false)
                        .html('<i class="fas fa-plus-circle me-2"></i>Создать / обновить группу');
                }
            });
        }

        // Функция для показа уведомлений
        function showNotification(type, title, message) {
            const icons = {
                success: 'fa-check-circle',
                warning: 'fa-exclamation-triangle',
                error: 'fa-times-circle',
                info: 'fa-info-circle'
            };
    
            const notification = $(`
                <div class="notification ${type}">
                    <i class="fas ${icons[type]}"></i>
                    <div class="notification-content">
                        <div class="notification-title">${title}</div>
                        <div class="notification-message">${message}</div>
                    </div>
                </div>
            `);
    
            $('#notifications').append(notification);
    
            // Автоматическое удаление через 3 секунды
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // Функция для загрузки глобальных исключений в модальное окно
        async function loadGlobalExcludes() {
            try {
                const response = await fetch('/Home/GetGlobalExcludes');
                if (response.ok) {
                    const excludes = await response.json();
                    renderGlobalExcludesList(excludes);
                    updateGlobalExcludesStats(excludes);
                } else {
                    showNotification('error', 'Ошибка', 'Не удалось загрузить глобальные исключения');
                }
            } catch (error) {
                console.error('Ошибка загрузки глобальных исключений:', error);
                showNotification('error', 'Ошибка', 'Не удалось загрузить глобальные исключения');
            }
        }

        // Функция для отрисовки списка в модальном окне
        function renderGlobalExcludesList(excludes) {
            const $list = $('#globalExcludesList');
            const $emptyMessage = $('#emptyExcludesMessage');
    
            if (!excludes || excludes.length === 0) {
                $list.empty();
                $emptyMessage.removeClass('d-none');
                return;
            }
    
            $emptyMessage.addClass('d-none');
    
            const html = excludes.map((item, index) => `
                <tr class="exclude-item">
                    <td class="text-muted">${index + 1}</td>
                    <td>
                        <code class="text-break">${item.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;')}</code>
                    </td>
                    <!-- В таблице -->
                    <td class="text-center">
                        <center><button type="button" class="btn btn-outline-danger table-action-btn remove-global-exclude" 
                                data-item="${item.replace(/"/g, '&quot;')}"
                                title="Удалить из исключений">
                            <i class="fas fa-times"></i>
                        </button></center>
                    </td>
                </tr>
            `).join('');
    
            $list.html(html);
        }

        // Функция для обновления статистики
        function updateGlobalExcludesStats(excludes) {
            const count = excludes ? excludes.length : 0;
            $('#globalExcludesCount').text(count);
    
            // Информация о файле (можно добавить реальные данные с сервера)
            const fileInfo = count > 0 ? `${count} записей` : 'Файл пуст';
            $('#globalExcludesFileInfo').text(fileInfo);
        }

        // Поиск в исключениях
        $('#searchExcludes').on('input', function() {
            const searchTerm = $(this).val().toLowerCase();
            $('.exclude-item').each(function() {
                const text = $(this).find('code').text().toLowerCase();
                $(this).toggle(text.includes(searchTerm));
            });
        });

        // Обработчики событий
        $(document).on('click', '#viewGlobalExcludesBtn', function() {
            loadGlobalExcludes();
            $('#globalExcludesModal').modal('show');
        });

        $(document).on('click', '#refreshExcludesBtn', function() {
            loadGlobalExcludes();
            showNotification('info', 'Обновлено', 'Список исключений обновлен');
        });

        $(document).on('click', '.remove-global-exclude', async function() {
            const item = $(this).data('item');
    
            if (confirm(`Удалить "${item}" из глобальных исключений?`)) {
                try {
                    const response = await fetch('/Home/RemoveGlobalExclude', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(item)
                    });
            
                    if (response.ok) {
                        const result = await response.json();
                        if (result.success) {
                            showNotification('success', 'Удалено', `"${item}" удален из глобальных исключений`);
                            loadGlobalExcludes(); // Перезагружаем список
                        } else {
                            showNotification('error', 'Ошибка', result.message || 'Не удалось удалить');
                        }
                    }
                } catch (error) {
                    showNotification('error', 'Ошибка', 'Не удалось удалить исключение');
                }
            }
        });

        $(document).on('click', '#clearAllExcludesBtn', function() {
            if (confirm('Очистить ВСЕ глобальные исключения? Это действие нельзя отменить.')) {
                // Вызов метода для очистки всех исключений
                clearAllGlobalExcludes();
            }
        });

        // Функция очистки всех исключений
        async function clearAllGlobalExcludes() {
            try {
                const response = await fetch('/Home/ClearAllExcludes', {
                    method: 'POST'
                });
        
                if (response.ok) {
                    const result = await response.json();
                    if (result.success) {
                        showNotification('success', 'Очищено', 'Все глобальные исключения удалены');
                        loadGlobalExcludes(); // Перезагружаем список
                        $('#globalExcludesModal').modal('hide');
                    } else {
                        showNotification('error', 'Ошибка', result.message || 'Не удалось очистить');
                    }
                }
            } catch (error) {
                showNotification('error', 'Ошибка', 'Не удалось очистить исключения');
            }
        }

        $(function () {
            $('#uploadBtn').on('click', uploadFile);
            $('#createGroupBtn').on('click', createGroup);
            $('#existingGroupSelect, #newGroupName, #itemsTextarea, #createNewGroupCheck')
                .on('input change keyup paste', updateCreateGroupButtonState);
            $('#createNewGroupCheck').on('change', function () {
                $('#newGroupNameWrapper').toggle(this.checked);
                $('#existingGroupSelect').prop('disabled', this.checked);
                if (this.checked) $('#newGroupName').focus();
                updateCreateGroupButtonState();
            });
            $('select[name="IsUrlGroup"]').on('change', function () {
                loadGroups(this.value === 'true');
            });
            $textarea.on('input paste keyup', () => setTimeout(updateItemsCounter, 0));
            $textarea.on('paste', () => {
                setTimeout(() => {
                    const lines = $textarea.val().split('\n').map(s => s.trim()).filter(s => s);
                    if (lines.length > MAX_ITEMS) {
                        $textarea.val($textarea.val().split('\n').slice(0, MAX_ITEMS).join('\n'));
                        updateItemsCounter();
                    }
                }, 0);
            });
            loadGroups(false);
            updateItemsCounter();
        });
    </script>
}