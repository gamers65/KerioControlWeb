                        <table id="urlGroupsTable" class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Название группы</th>
                                    <th class="text-end">Кол-во элементов</th>
                                    <th width="100" class="text-end">Действия</th>
                                </tr>
                            </thead>
                            <tbody id="urlGroupsTableBody">
                                @foreach (var group in Model.UrlGroups.Where(g => g.ItemCount > 0))
                                {
                                    <tr data-group-name="@group.GroupName" data-group-type="url" data-item-count="@group.ItemCount">
                                        <td>
                                            @if (string.IsNullOrWhiteSpace(group.GroupName))
                                            {
                                                <strong class="text-danger">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>Без названия
                                                </strong>
                                            }
                                            else
                                            {
                                                <strong>@group.GroupName</strong>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <span class="badge bg-success rounded-pill px-3">
                                                @group.ItemCount
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <div class="group-actions">
                                                <button class="btn btn-sm btn-outline-info hide-group-btn"
                                                        title="Скрыть группу">
                                                    <i class="fas fa-eye-slash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <!-- Сообщение когда нет групп -->
                        <div id="emptyUrlGroups" class="text-center py-5 text-muted d-none">
                            Нет активных URL-групп
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted small text-center">
                    Всего URL в группах: <strong id="totalUrlItemsFooter">@Model.TotalUrlItems</strong>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Хранилище скрытых групп
        let hiddenGroups = {
            ip: [],
            url: []
        };

        // ========== БЕЗОПАСНАЯ ИНИЦИАЛИЗАЦИЯ ==========

        // Функция для безопасной инициализации hiddenGroups
        function initializeHiddenGroups() {
            try {
                // Пытаемся загрузить из localStorage
                const storedIpGroups = localStorage.getItem('hiddenIpGroups');
                const storedUrlGroups = localStorage.getItem('hiddenUrlGroups');

                // Убеждаемся что данные валидны
                if (storedIpGroups) {
                    const parsed = JSON.parse(storedIpGroups);
                    hiddenGroups.ip = Array.isArray(parsed) ? parsed : [];
                } else {
                    hiddenGroups.ip = [];
                }

                if (storedUrlGroups) {
                    const parsed = JSON.parse(storedUrlGroups);
                    hiddenGroups.url = Array.isArray(parsed) ? parsed : [];
                } else {
                    hiddenGroups.url = [];
                }

                console.log('📁 Загружены скрытые группы:', hiddenGroups);
            } catch (error) {
                console.error('❌ Ошибка загрузки скрытых групп из localStorage:', error);
                // Сбрасываем к пустым массивам при ошибке
                hiddenGroups.ip = [];
                hiddenGroups.url = [];
            }
        }

        // Функция для получения информации о группах непосредственно из DOM
        function getGroupsInfoFromDOM() {
            console.log('🔍 Получение данных о группах из DOM...');

            const groupsInfo = { ip: {}, url: {} };

            // Собираем информацию о IP группах
            $('[data-group-type="ip"]').each(function () {
                const groupName = $(this).data('group-name');
                const itemCount = parseInt($(this).data('item-count')) || 0;
                groupsInfo.ip[groupName] = itemCount;
            });

            // Собираем информацию о URL группах
            $('[data-group-type="url"]').each(function () {
                const groupName = $(this).data('group-name');
                const itemCount = parseInt($(this).data('item-count')) || 0;
                groupsInfo.url[groupName] = itemCount;
            });

            return groupsInfo;
        }

        // Функция для проверки, скрыта ли группа (с проверками безопасности)
        function isGroupHidden(groupName, groupType) {
            const hiddenList = hiddenGroups[groupType];

            // Проверяем что hiddenList существует и является массивом
            if (!hiddenList || !Array.isArray(hiddenList)) {
                console.warn(`⚠️ hiddenGroups.${groupType} не является массивом:`, hiddenList);
                return false;
            }

            return hiddenList.some(hiddenName =>
                hiddenName == groupName ||
                String(hiddenName) === String(groupName)
            );
        }

        // ========== ОСНОВНЫЕ ФУНКЦИИ ОБНОВЛЕНИЯ ИНТЕРФЕЙСА ==========

        function updateStatistics() {
            try {
                const totalIpGroups = $('[data-group-type="ip"]').length;
                const totalUrlGroups = $('[data-group-type="url"]').length;

                let totalIpItems = 0;
                let totalUrlItems = 0;

                $('[data-group-type="ip"]').each(function () {
                    totalIpItems += parseInt($(this).data('item-count')) || 0;
                });

                $('[data-group-type="url"]').each(function () {
                    totalUrlItems += parseInt($(this).data('item-count')) || 0;
                });

                const visibleIpGroups = $('[data-group-type="ip"]:visible').length;
                const visibleUrlGroups = $('[data-group-type="url"]:visible').length;

                let visibleIpItems = 0;
                let visibleUrlItems = 0;

                $('[data-group-type="ip"]:visible').each(function () {
                    visibleIpItems += parseInt($(this).data('item-count')) || 0;
                });

                $('[data-group-type="url"]:visible').each(function () {
                    visibleUrlItems += parseInt($(this).data('item-count')) || 0;
                });

                // Обновляем UI
                $('#ipGroupsCount').text(totalIpGroups);
                $('#urlGroupsCount').text(totalUrlGroups);
                $('#ipItemsCount').text(totalIpItems);
                $('#urlItemsCount').text(totalUrlItems);

                const hiddenIpGroupsCount = Array.isArray(hiddenGroups.ip) ? hiddenGroups.ip.length : 0;
                const hiddenUrlGroupsCount = Array.isArray(hiddenGroups.url) ? hiddenGroups.url.length : 0;
                const hiddenIpItemsCount = totalIpItems - visibleIpItems;
                const hiddenUrlItemsCount = totalUrlItems - visibleUrlItems;

                $('#hiddenIpGroupsText').toggle(hiddenIpGroupsCount > 0);
                $('#hiddenIpGroupsCountText').text(hiddenIpGroupsCount);
                $('#hiddenUrlGroupsText').toggle(hiddenUrlGroupsCount > 0);
                $('#hiddenUrlGroupsCountText').text(hiddenUrlGroupsCount);

                $('#hiddenIpItemsText').toggle(hiddenIpItemsCount > 0);
                $('#hiddenIpItemsCountText').text(hiddenIpItemsCount);
                $('#hiddenUrlItemsText').toggle(hiddenUrlItemsCount > 0);
                $('#hiddenUrlItemsCountText').text(hiddenUrlItemsCount);

                $('#totalIpItemsFooter').text(visibleIpItems);
                $('#totalUrlItemsFooter').text(visibleUrlItems);

                updateEmptyGroupsMessages();
            } catch (error) {
                console.error('❌ Ошибка в updateStatistics:', error);
            }
        }

        function updateEmptyGroupsMessages() {
            try {
                const visibleIpGroups = $('[data-group-type="ip"]:visible').length;
                const hasIpGroups = $('[data-group-type="ip"]').length > 0;
                const visibleUrlGroups = $('[data-group-type="url"]:visible').length;
                const hasUrlGroups = $('[data-group-type="url"]').length > 0;

                if (hasIpGroups && visibleIpGroups === 0) {
                    $('#emptyIpGroups').removeClass('d-none').show();
                    $('#ipGroupsTable').hide();
                } else if (!hasIpGroups) {
                    $('#emptyIpGroups').removeClass('d-none').show();
                    $('#ipGroupsTable').hide();
                } else {
                    $('#emptyIpGroups').addClass('d-none').hide();
                    $('#ipGroupsTable').show();
                }

                if (hasUrlGroups && visibleUrlGroups === 0) {
                    $('#emptyUrlGroups').removeClass('d-none').show();
                    $('#urlGroupsTable').hide();
                } else if (!hasUrlGroups) {
                    $('#emptyUrlGroups').removeClass('d-none').show();
                    $('#urlGroupsTable').hide();
                } else {
                    $('#emptyUrlGroups').addClass('d-none').hide();
                    $('#urlGroupsTable').show();
                }
            } catch (error) {
                console.error('❌ Ошибка в updateEmptyGroupsMessages:', error);
            }
        }

        function saveHiddenGroups() {
            try {
                // Убеждаемся что это массивы перед сохранением
                if (!Array.isArray(hiddenGroups.ip)) {
                    console.warn('⚠️ hiddenGroups.ip не массив перед сохранением, сбрасываем:', hiddenGroups.ip);
                    hiddenGroups.ip = [];
                }

                if (!Array.isArray(hiddenGroups.url)) {
                    console.warn('⚠️ hiddenGroups.url не массив перед сохранением, сбрасываем:', hiddenGroups.url);
                    hiddenGroups.url = [];
                }

                // Убираем дубликаты перед сохранением
                hiddenGroups.ip = [...new Set(hiddenGroups.ip)];
                hiddenGroups.url = [...new Set(hiddenGroups.url)];

                localStorage.setItem('hiddenIpGroups', JSON.stringify(hiddenGroups.ip));
                localStorage.setItem('hiddenUrlGroups', JSON.stringify(hiddenGroups.url));
                updateVisibleGroups();
                updateHiddenGroupsUI();
            } catch (error) {
                console.error('❌ Ошибка в saveHiddenGroups:', error);
            }
        }

        function updateVisibleGroups() {
            try {
                $('[data-group-name]').each(function () {
                    const groupName = $(this).data('group-name');
                    const groupType = $(this).data('group-type');

                    // Проверяем что groupType валидный
                    if (groupType !== 'ip' && groupType !== 'url') {
                        console.warn(`⚠️ Неизвестный тип группы: ${groupType}`);
                        return;
                    }

                    const isHidden = isGroupHidden(groupName, groupType);
                    $(this).toggle(!isHidden);
                });
                updateStatistics();
            } catch (error) {
                console.error('❌ Ошибка в updateVisibleGroups:', error);
            }
        }

        function updateHiddenGroupsUI() {
            try {
                const totalHidden = (Array.isArray(hiddenGroups.ip) ? hiddenGroups.ip.length : 0) +
                    (Array.isArray(hiddenGroups.url) ? hiddenGroups.url.length : 0);
                $('#totalHiddenGroupsBadge').text(totalHidden);
                updateHiddenGroupsModal();
            } catch (error) {
                console.error('❌ Ошибка в updateHiddenGroupsUI:', error);
            }
        }

        function updateHiddenGroupsModal() {
            try {
                // IP группы
                const $ipList = $('#hiddenIpGroupsList');
                $ipList.empty();

                if (Array.isArray(hiddenGroups.ip) && hiddenGroups.ip.length > 0) {
                    $('#emptyHiddenIpGroups').addClass('d-none');
                    // Убираем дубликаты при отображении
                    const uniqueIpGroups = [...new Set(hiddenGroups.ip)];
                    uniqueIpGroups.forEach(groupName => {
                        $ipList.append(`
                                                    <tr>
                                                        <td>
                                                            <strong>${groupName}</strong>
                                                            <small class="text-muted d-block">IP-группа</small>
                                                        </td>
                                                        <td class="text-end">
                                                            <button class="btn btn-sm btn-outline-success restore-group-btn"
                                                                    data-group-name="${groupName}" data-group-type="ip">
                                                                <i class="fas fa-eye me-1"></i>Восстановить
                                                            </button>
                                                        </td>
                                                    </tr>
                                                `);
                    });
                } else {
                    $('#emptyHiddenIpGroups').removeClass('d-none');
                }

                // URL группы
                const $urlList = $('#hiddenUrlGroupsList');
                $urlList.empty();

                if (Array.isArray(hiddenGroups.url) && hiddenGroups.url.length > 0) {
                    $('#emptyHiddenUrlGroups').addClass('d-none');
                    // Убираем дубликаты при отображении
                    const uniqueUrlGroups = [...new Set(hiddenGroups.url)];
                    uniqueUrlGroups.forEach(groupName => {
                        $urlList.append(`
                                                    <tr>
                                                        <td>
                                                            <strong>${groupName}</strong>
                                                            <small class="text-muted d-block">URL-группа</small>
                                                        </td>
                                                        <td class="text-end">
                                                            <button class="btn btn-sm btn-outline-success restore-group-btn"
                                                                    data-group-name="${groupName}" data-group-type="url">
                                                                <i class="fas fa-eye me-1"></i>Восстановить
                                                            </button>
                                                        </td>
                                                    </tr>
                                                `);
                    });
                } else {
                    $('#emptyHiddenUrlGroups').removeClass('d-none');
                }

                $('#hiddenIpGroupsCount').text(Array.isArray(hiddenGroups.ip) ? [...new Set(hiddenGroups.ip)].length : 0);
                $('#hiddenUrlGroupsCount').text(Array.isArray(hiddenGroups.url) ? [...new Set(hiddenGroups.url)].length : 0);
            } catch (error) {
                console.error('❌ Ошибка в updateHiddenGroupsModal:', error);
            }
        }

        // ========== ФУНКЦИИ СИНХРОНИЗАЦИИ ==========

        async function syncWithServer() {
            try {
                const response = await fetch('/Home/GetActualGroupsInfo');
                if (response.ok) {
                    const serverData = await response.json();

                    // Убеждаемся что данные с сервера валидны
                    const serverIpGroups = serverData.ipGroups || {};
                    const serverUrlGroups = serverData.urlGroups || {};

                    console.log('🔄 Синхронизация с сервером:', { serverIpGroups, serverUrlGroups });

                    // Убираем скрытые группы, которых больше нет на сервере
                    // Убеждаемся что hiddenGroups - это массивы
                    if (Array.isArray(hiddenGroups.ip)) {
                        hiddenGroups.ip = hiddenGroups.ip.filter(groupName => groupName in serverIpGroups);
                    } else {
                        console.warn('⚠️ hiddenGroups.ip не массив, сбрасываем:', hiddenGroups.ip);
                        hiddenGroups.ip = [];
                    }

                    if (Array.isArray(hiddenGroups.url)) {
                        hiddenGroups.url = hiddenGroups.url.filter(groupName => groupName in serverUrlGroups);
                    } else {
                        console.warn('⚠️ hiddenGroups.url не массив, сбрасываем:', hiddenGroups.url);
                        hiddenGroups.url = [];
                    }

                    // Сохраняем обновленные скрытые группы
                    localStorage.setItem('hiddenIpGroups', JSON.stringify(hiddenGroups.ip));
                    localStorage.setItem('hiddenUrlGroups', JSON.stringify(hiddenGroups.url));

                    // Обновляем интерфейс
                    updateVisibleGroups();
                    updateHiddenGroupsUI();

                    console.log('✅ Данные синхронизированы с сервером');
                } else {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
            } catch (error) {
                console.error('❌ Ошибка синхронизации с сервером:', error);
                throw error;
            }
        }

        // ========== ФУНКЦИИ МОДАЛЬНЫХ ОКОН СКАЧИВАНИЯ ==========

        function openModal(modalId, populateFunction) {
            $('.modal').modal('hide');
            setTimeout(() => {
                if (populateFunction) {
                    populateFunction();
                }
                $(modalId).modal('show');
            }, 300);
        }

        function populateDownloadIpGroupsList() {
            try {
                const $list = $('#downloadGroupsList');
                $list.empty();

                const groupsInfo = getGroupsInfoFromDOM();
                const ipGroups = Object.keys(groupsInfo.ip).map(groupName => ({
                    name: groupName,
                    count: groupsInfo.ip[groupName]
                }));

                ipGroups.sort((a, b) => String(a.name).localeCompare(String(b.name)));

                ipGroups.forEach(group => {
                    const displayName = group.name || 'Без названия';
                    const isHidden = isGroupHidden(group.name, 'ip');

                    $list.append(`
                                                <tr>
                                                    <td>
                                                        <input type="checkbox" class="group-checkbox" data-group-name="${group.name}" checked>
                                                    </td>
                                                    <td>
                                                        <strong>${displayName}</strong>
                                                        ${isHidden ? '<small class="text-primary d-block"><i class="fas fa-eye-slash me-1"></i>Скрыта</small>' : ''}
                                                    </td>
                                                    <td class="text-end">
                                                        <span class="badge bg-primary">${group.count}</span>
                                                    </td>
                                                </tr>
                                            `);
                });

                updateSelectAllCheckbox();
            } catch (error) {
                console.error('❌ Ошибка в populateDownloadIpGroupsList:', error);
            }
        }

        function updateSelectAllCheckbox() {
            try {
                const allCheckboxes = $('.group-checkbox');
                const checkedCount = allCheckboxes.filter(':checked').length;
                const selectAllCheckbox = $('#selectAllCheckbox');

                if (checkedCount === allCheckboxes.length) {
                    selectAllCheckbox.prop('checked', true);
                    selectAllCheckbox.prop('indeterminate', false);
                } else if (checkedCount === 0) {
                    selectAllCheckbox.prop('checked', false);
                    selectAllCheckbox.prop('indeterminate', false);
                } else {
                    selectAllCheckbox.prop('checked', false);
                    selectAllCheckbox.prop('indeterminate', true);
                }
            } catch (error) {
                console.error('❌ Ошибка в updateSelectAllCheckbox:', error);
            }
        }

        function populateDownloadUrlGroupsList() {
            try {
                const $list = $('#downloadUrlGroupsList');
                $list.empty();

                const groupsInfo = getGroupsInfoFromDOM();
                const urlGroups = Object.keys(groupsInfo.url).map(groupName => ({
                    name: groupName,
                    count: groupsInfo.url[groupName]
                }));

                urlGroups.sort((a, b) => String(a.name).localeCompare(String(b.name)));

                urlGroups.forEach(group => {
                    const displayName = group.name || 'Без названия';
                    const isHidden = isGroupHidden(group.name, 'url');

                    $list.append(`
                                                <tr>
                                                    <td>
                                                        <input type="checkbox" class="url-group-checkbox" data-group-name="${group.name}" checked>
                                                    </td>
                                                    <td>
                                                        <strong>${displayName}</strong>
                                                        ${isHidden ? '<small class="text-primary d-block"><i class="fas fa-eye-slash me-1"></i>Скрыта</small>' : ''}
                                                    </td>
                                                    <td class="text-end">
                                                        <span class="badge bg-success">${group.count}</span>
                                                    </td>
                                                </tr>
                                            `);
                });

                updateSelectAllUrlCheckbox();
            } catch (error) {
                console.error('❌ Ошибка в populateDownloadUrlGroupsList:', error);
            }
        }

        function updateSelectAllUrlCheckbox() {
            try {
                const allCheckboxes = $('.url-group-checkbox');
                const checkedCount = allCheckboxes.filter(':checked').length;
                const selectAllCheckbox = $('#selectAllUrlCheckbox');

                if (checkedCount === allCheckboxes.length) {
                    selectAllCheckbox.prop('checked', true);
                    selectAllCheckbox.prop('indeterminate', false);
                } else if (checkedCount === 0) {
                    selectAllCheckbox.prop('checked', false);
                    selectAllCheckbox.prop('indeterminate', false);
                } else {
                    selectAllCheckbox.prop('checked', false);
                    selectAllCheckbox.prop('indeterminate', true);
                }
            } catch (error) {
                console.error('❌ Ошибка в updateSelectAllUrlCheckbox:', error);
            }
        }

        // ========== ФУНКЦИИ СКАЧИВАНИЯ С БЕЗОПАСНЫМ ОБНОВЛЕНИЕМ ==========

        // Безопасная функция обновления
        function safeRefresh() {
            try {
                $('#refreshGroupsBtn').click();
            } catch (error) {
                console.error('❌ Ошибка при безопасном обновлении:', error);
                // Пытаемся хотя бы обновить UI
                try {
                    updateVisibleGroups();
                    updateHiddenGroupsUI();
                } catch (uiError) {
                    console.error('❌ Ошибка при обновлении UI:', uiError);
                }
            }
        }

        async function downloadSelectedIpGroups() {
            const selectedGroups = [];
            $('.group-checkbox:checked').each(function () {
                selectedGroups.push($(this).data('group-name'));
            });

            if (selectedGroups.length === 0) {
                showNotification('warning', 'Внимание', 'Выберите хотя бы одну группу для скачивания');
                return;
            }

            const includeDescription = $('#includeDescription').is(':checked');

            try {
                const $downloadBtn = $('#downloadSelectedGroups');
                const originalHtml = $downloadBtn.html();
                $downloadBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i>Подготовка...');

                const params = new URLSearchParams();
                selectedGroups.forEach(group => params.append('groupNames', group));
                params.append('includeDescription', includeDescription);

                const response = await fetch('/Home/DownloadIpGroups?' + params.toString());

                if (response.ok) {
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'ip_groups.zip';
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);

                    showNotification('success', 'Успех', `Скачано ${selectedGroups.length} групп`);
                    $('#downloadIpGroupsModal').modal('hide');

                    // Безопасное обновление после успешного скачивания
                    setTimeout(() => {
                        safeRefresh();
                    }, 1000);
                } else {
                    throw new Error('Ошибка сервера');
                }
            } catch (error) {
                console.error('Ошибка скачивания:', error);
                showNotification('error', 'Ошибка', 'Не удалось скачать группы');
            } finally {
                const $downloadBtn = $('#downloadSelectedGroups');
                $downloadBtn.prop('disabled', false).html('<i class="fas fa-download me-1"></i>Скачать выбранные');
            }
        }

        async function downloadSelectedUrlGroups() {
            const selectedGroups = [];
            $('.url-group-checkbox:checked').each(function () {
                selectedGroups.push($(this).data('group-name'));
            });

            if (selectedGroups.length === 0) {
                showNotification('warning', 'Внимание', 'Выберите хотя бы одну группу для скачивания');
                return;
            }

            const includeDescription = $('#includeDescriptionUrl').is(':checked');

            try {
                const $downloadBtn = $('#downloadSelectedUrlGroups');
                const originalHtml = $downloadBtn.html();
                $downloadBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i>Подготовка...');

                const params = new URLSearchParams();
                selectedGroups.forEach(group => params.append('groupNames', group));
                params.append('includeDescription', includeDescription);

                const response = await fetch('/Home/DownloadUrlGroups?' + params.toString());

                if (response.ok) {
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'url_groups.zip';
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);

                    showNotification('success', 'Успех', `Скачано ${selectedGroups.length} URL групп`);
                    $('#downloadUrlGroupsModal').modal('hide');

                    // Безопасное обновление после успешного скачивания
                    setTimeout(() => {
                        safeRefresh();
                    }, 1000);
                } else {
                    throw new Error('Ошибка сервера');
                }
            } catch (error) {
                console.error('Ошибка скачивания URL групп:', error);
                showNotification('error', 'Ошибка', 'Не удалось скачать URL группы');
            } finally {
                const $downloadBtn = $('#downloadSelectedUrlGroups');
                $downloadBtn.prop('disabled', false).html('<i class="fas fa-download me-1"></i>Скачать выбранные');
            }
        }

        // ========== ОБРАБОТЧИКИ СОБЫТИЙ С БЕЗОПАСНЫМ ОБНОВЛЕНИЕМ ==========

        $(document).ready(function () {
            console.log('🚀 Инициализация страницы Sensors');

            // Инициализируем скрытые группы
            initializeHiddenGroups();

            updateVisibleGroups();
            updateHiddenGroupsUI();
            console.log('✅ Страница инициализирована');
        });

        // Обработчики закрытия модальных окон скачивания
        $(document).on('click', '#downloadIpGroupsModal .btn-secondary[data-bs-dismiss="modal"]', function () {
            // Безопасное обновление после закрытия модального окна скачивания IP групп
            setTimeout(() => {
                safeRefresh();
            }, 500);
        });

