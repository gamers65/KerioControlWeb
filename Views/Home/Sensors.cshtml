                        <table id="ipGroupsTable" class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Название группы</th>
                                    <th class="text-end">Кол-во элементов</th>
                                    <th width="100" class="text-end">Действия</th>
                                </tr>
                            </thead>
                            <tbody id="ipGroupsTableBody">
